  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "npm run setup:env && concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "setup:env": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')) fs.copyFileSync('.env.example', '.env'); if(!fs.existsSync('backend/.env')) fs.copyFileSync('backend/.env.example', 'backend/.env');\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "npm run setup:env && wait-on http://localhost:3001/api/health && vite",
    "dev": "npm start",
    "prebuild": "npm run setup:env",
    "lint": "eslint . --ext ts,tsx --max-warnings=0",
    "format": "eslint . --ext ts,tsx --fix",
    "prepare": "husky install",
    "build": "tsc -b && vite build",
    "build:all": "npm run build && cd backend && npm run build",
    "preview": "vite preview",
    "test": "playwright test --quiet",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
