{
  "name": "sandbooks",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "A notes-first application for developers combining a simple, clean UX with executable code snippets powered by cloud sandboxes",
  "keywords": [
    "notes",
    "code-execution",
    "developer-tools",
    "tiptap",
    "react",
    "typescript",
    "sandboxed-execution",
    "hopx",
    "rich-text-editor"
  ],
  "homepage": "https://sandbooks.space",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahutanu/sandbooks.space.git"
  },
  "bugs": {
    "url": "https://github.com/ahutanu/sandbooks.space/issues"
  },
  "author": {
    "name": "Alex Hutanu",
    "email": "alex@hutanu.net",
    "url": "https://hutanu.net"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "npm run setup:env && concurrently -n \"BACKEND,FRONTEND\" -c \"blue,green\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "setup:env": "node -e \"const fs=require('fs'); if(!fs.existsSync('.env')) fs.copyFileSync('.env.example', '.env'); if(!fs.existsSync('backend/.env')) fs.copyFileSync('backend/.env.example', 'backend/.env');\"",
    "backend:dev": "cd backend && npm run dev",
    "frontend:dev": "npm run setup:env && wait-on http://localhost:3001/api/health && vite",
    "dev": "npm start",
    "prebuild": "npm run setup:env",
    "lint": "eslint . --ext ts,tsx --max-warnings=0",
    "format": "eslint . --ext ts,tsx --fix",
    "prepare": "husky install",
    "build": "tsc -b && vite build",
    "build:all": "npm run build && cd backend && npm run build",
    "preview": "vite preview",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/language": "^6.11.3",
    "@codemirror/legacy-modes": "^6.5.2",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.8",
    "@fontsource-variable/inter": "^5.2.8",
    "@fontsource-variable/jetbrains-mono": "^5.2.8",
    "@lezer/highlight": "^1.2.3",
    "@tiptap/extension-code-block-lowlight": "^2.11.3",
    "@tiptap/extension-highlight": "^2.27.1",
    "@tiptap/extension-image": "^2.27.1",
    "@tiptap/extension-link": "^2.27.1",
    "@tiptap/extension-placeholder": "^2.27.1",
    "@tiptap/extension-task-item": "^2.27.1",
    "@tiptap/extension-task-list": "^2.27.1",
    "@tiptap/extension-typography": "^2.27.1",
    "@tiptap/extension-underline": "^2.27.1",
    "@tiptap/react": "^2.11.3",
    "@tiptap/starter-kit": "^2.11.3",
    "@tiptap/suggestion": "^2.27.1",
    "@uiw/react-codemirror": "^4.25.3",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fast-deep-equal": "^3.1.3",
    "highlight.js": "^11.11.1",
    "lowlight": "^3.1.0",
    "nanoid": "^5.1.6",
    "prosemirror-codemirror-block": "^0.5.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-icons": "^5.5.0",
    "tippy.js": "^6.3.7",
    "use-debounce": "^10.0.6",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-icons": "^2.2.7",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.12",
    "@vitest/ui": "^4.0.12",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "playwright": "^1.56.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.47.0",
    "vite": "^6.0.7",
    "vitest": "^4.0.12",
    "wait-on": "^9.0.3"
  }
}
